<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.yangshaomin.Text.MainActivity">

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="0"
        android:scrollHorizontally="true"
        android:maxLength="10"

        android:lines="1"
        />
    //第一列


    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="7"
        android:layout_marginTop="90dp"
        android:textSize="50sp"
        android:id="@+id/button7" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="4"
        android:layout_below="@id/button7"
        android:textSize="50sp"
        android:id="@+id/button4" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="1"
        android:layout_below="@id/button4"
        android:textSize="50sp"
        android:id="@+id/button1" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="."
        android:layout_below="@id/button1"
        android:textSize="50sp"
        android:id="@+id/button_point" />

    //第二列

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="8"
        android:layout_toRightOf="@id/button7"
        android:layout_marginTop="90dp"
        android:textSize="50sp"
        android:id="@+id/button8" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="5"
        android:layout_below="@id/button8"
        android:layout_toRightOf="@id/button4"
        android:textSize="50sp"
        android:id="@+id/button5" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="2"
        android:layout_below="@id/button5"
        android:layout_toRightOf="@id/button1"
        android:textSize="50sp"
        android:id="@+id/button2" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="0"
        android:layout_below="@id/button2"
        android:layout_toRightOf="@id/button_point"
        android:textSize="50sp"
        android:id="@+id/button0" />

    //第三列

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="9"
        android:layout_toRightOf="@id/button8"
        android:layout_marginTop="90dp"
        android:textSize="50sp"
        android:id="@+id/button9" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="6"
        android:layout_below="@id/button9"
        android:layout_toRightOf="@id/button5"
        android:textSize="50sp"
        android:id="@+id/button6" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="3"
        android:layout_below="@id/button6"
        android:layout_toRightOf="@id/button2"
        android:textSize="50sp"
        android:id="@+id/button3" />
    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="删除"
        android:layout_below="@id/button3"
        android:layout_toRightOf="@id/button0"
        android:textSize="20sp"
        android:id="@+id/button_del" />

    //第四列

    <Button
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:text="/"
        android:layout_toRightOf="@id/button9"
        android:layout_marginTop="90dp"
        android:textSize="50sp"
        android:id="@+id/button_except" />

    <Button
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:text="*"
        android:layout_below="@id/button_except"
        android:layout_toRightOf="@id/button6"
        android:textSize="40sp"
        android:id="@+id/button_ride" />

    <Button
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:text="-"
        android:layout_below="@id/button_ride"
        android:layout_toRightOf="@id/button6"
        android:textSize="40sp"
        android:id="@+id/button_reduce" />


    <Button
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:text="+"
        android:layout_below="@id/button_reduce"
        android:layout_toRightOf="@id/button6"
        android:textSize="40sp"
        android:id="@+id/button_plus" />


    <Button
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:text="="
        android:layout_below="@id/button_plus"
        android:layout_toRightOf="@id/button6"
        android:textSize="40sp"
        android:id="@+id/button_equal" />

    //全清

    <Button
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:text="C"
        android:layout_below="@+id/button_equal"
        android:layout_toRightOf="@+id/button_del"
        android:textSize="40sp"
        android:id="@+id/button_clean" />










</RelativeLayout>


